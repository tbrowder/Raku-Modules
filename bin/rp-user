#!/usr/bin/env raku

my $usable = "/opt/rakudo-pkg/bin/raku".IO.e ?? True !! False;

use lib <../lib>;
use RakudoPkgHelper;

my $user    = $*USER;
my $is-root = $user eq 'root' ?? True !! False;

if not $usable {
    say "WARNING: This program is not usable because 'rakudo-pkg' is not installed.";
}

if not @*ARGS {
    say qq:to/HERE/;
    Usage: {$*PROGRAM.basename} go

    HERE
    exit
}

